so ~/.config/nvim/plugins.vim
so ~/.config/nvim/colorscheme.vim
so ~/.config/nvim/maps.vim
so ~/.config/nvim/coc.vim
so ~/.config/nvim/format.vim


set number
set mouse=a
set numberwidth=1
set clipboard=unnamed
syntax enable
set showcmd
set ruler
set cursorline
set encoding=utf-8
set showmatch
set sw=2
set relativenumber
set laststatus=2
set noshowmode


